{
  "name": "step-blockchain",
  "version": "0.1.0",
  "description": "STEP Blockchain Protocol - Proof-of-Location consensus with icosahedron mesh system",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "build": "tsc",
    "dev": "npm run version:patch && tsx watch core/index.ts",
    "start": "node dist/index.js",
    "version:patch": "node scripts/bump-version.js patch",
    "version:minor": "node scripts/bump-version.js minor",
    "version:major": "node scripts/bump-version.js major"
  },
  "keywords": [
    "blockchain",
    "proof-of-location",
    "geospatial",
    "icosahedron",
    "cryptocurrency"
  ],
  "author": "STEP Protocol Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.18.0 || >=20.0.0"
  },
  "dependencies": {
    "@noble/hashes": "^1.3.3",
    "@noble/secp256k1": "^2.0.0",
    "express": "^4.18.2",
    "mongoose": "^8.0.0",
    "@turf/turf": "^6.5.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
