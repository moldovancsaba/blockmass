{
  "version": 2,
  "builds": [
    { "src": "frontend/package.json", "use": "@vercel/next" }
  ],
  "routes": [
    { "src": "/(.*)", "dest": "frontend/$1" }
  ],
  "crons": [
    { "path": "/api/health/public", "schedule": "0 * * * *" },
    { "path": "/api/health/public", "schedule": "0 3 * * *" }
  ]
}
